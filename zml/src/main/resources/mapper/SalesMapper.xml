<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.it.mapper.SalesMapper">
    <cache/>
    <select id="findByParam" resultType="Sales">
        SELECT * FROM  t_sales
        <where>
            <if test="userid != null and userid != ''" >
                userid =# {userid}
            </if>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')

            </if>
            <if test="progress != null and progress  !=''">
                and progress =#{progress}
            </if>
            <if test="startdate !=null and startdate !=''">
                and date(lasttime) >= #{startdate}

            </if>
            <if test="enddate !=null and enddate !=''">
                and date(lasttime) &lt;= #{enddate}
            </if>

        </where>
        order by id desc
        limit ${start},${length}

    </select>
    <select id="countByParam" resultType="long">
        SELECT count(*) FROM t_sales
        <where>
            <if test="userid != null and userid != ''">
                userid =#{userid}

            </if>
            <if test="name != null and name !=''">
                and name like concat('%',#{name},'%')

            </if>
            <if test="progress !=null and progress !=''">
                and progress =#{progress}

            </if>
            <if test="startdate !=null and startdate !=''">
                and date(lasttime) >=#{startdate}


            </if>
            <if test="enddate !=null and enddate !=''">
                and date(lasttime) &lt;=#{enddate}

            </if>
        </where>


    </select>
    <insert id="save" useGeneratedKeys="true" keyProperty="id">

      INSERT INTO t_sales(name,price,custid,custname,progress,lasttime,userid,username,successtime)
      VALUES (#{name},#{price},#{custid},#{username},#{progess},#{lasttime},#{userid},#{username},#{successtime})

    </insert>
    <select id="findByCustId" resultType="Sales">
        SELECT * FROM  t_sales WHERE  custid = #{custId}
        order by id desc
    </select>
    <select id="findById" resultType="com.it.pojo.Sales">
      SELECT * FROM t_sales
      WHERE  id = #{id}
    </select>
    <update id="update" >
        UPDATE t_sales SET lasttime = #{lasttime},successtime =#{successtime},progess=#{progess}
        where id =#{id}
    </update>
</mapper>